num1 = int(input("Enter the first number: "))
num2 = int(input("Enter the second number: "))
operation = input("Which operation you want to perform(add/sub/ mul/ div): ")
if operation == "add":
    print(num1 + num2)
elif operation == "sub":
    print(num1 - num2)
elif operation == "mul":
    print(num1 * num2)
elif operation == "div":
    print(num1/num2)
else:
    print("Error")
